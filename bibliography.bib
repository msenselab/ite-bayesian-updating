	pages = {1315--1326}
}

@article{found_searching_1996,
	title = {Searching for unknown feature targets on more than one dimension: {Investigating} a “dimension-weighting” account},
	volume = {58},
	issn = {0031-5117, 1532-5962},
	shorttitle = {Searching for unknown feature targets on more than one dimension},
