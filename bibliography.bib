@article{horner_incongruent_2012,
	title = {Incongruent {Abstract} {Stimulus}–{Response} {Bindings} {Result} in {Response} {Interference}: {fMRI} and {EEG} {Evidence} from {Visual} {Object} {Classification} {Priming}},
