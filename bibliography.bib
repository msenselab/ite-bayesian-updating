	number = {2},
	urldate = {2015-07-13},
	journal = {Current Biology},
	author = {Sergent, Claire and Wyart, Valentin and Babo-Rebelo, Mariana and Cohen, Laurent and Naccache, Lionel and Tallon-Baudry, Catherine},
