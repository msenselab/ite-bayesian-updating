	urldate = {2015-10-30},
	journal = {Proceedings of the National Academy of Sciences},
	author = {Schurger, Aaron and Sitt, Jacobo D. and Dehaene, Stanislas},
	month = oct,
	year = {2012},
	pmid = {22869750},
	keywords = {Volition, autocorrelation, power-law, resting state},
	pages = {E2904--E2913}
}

@article{hommel_event_1998,
	title = {Event {Files}: {Evidence} for {Automatic} {Integration} of {Stimulus}-{Response} {Episodes}},
