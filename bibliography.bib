	number = {21},
	urldate = {2017-06-26},
	journal = {Journal of Neuroscience},
	author = {Kuhns, Anna B. and Dombert, Pascasie L. and Mengotti, Paola and Fink, Gereon R. and Vossel, Simone},
	month = may,
	year = {2017},
	pmid = {28450541},
	keywords = {Bayesian inference, attentional networks, fMRI, motor preparation, psychophysiological interaction},
	pages = {5334--5344}
}

@article{cohen_perceptual_1997,
