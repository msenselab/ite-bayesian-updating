	author = {Wang, Rui and Shen, Yuan and Tino, Peter and Welchman, Andrew E. and Kourtzi, Zoe},
	month = aug,
	year = {2017},
	pmid = {28760866},
	keywords = {fMRI, learning, vision, prediction},
	pages = {8412--8427}
}

