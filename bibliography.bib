	journal = {Journal of Experimental Psychology: Human Perception and Performance},
	author = {Chun, Marvin M. and Potter, Mary C.},
	year = {1995},
	keywords = {*Attention, *Distraction, *Stimulus Discrimination, Models},
	pages = {109--127}
}

@article{ganel_relationship_2006,
	title = {The relationship between {fMRI} adaptation and repetition priming},
	volume = {32},
	issn = {1053-8119},
	url = {http://www.sciencedirect.com/science/article/pii/S1053811906006318},
	doi = {10.1016/j.neuroimage.2006.05.039},
	abstract = {Neuroimaging investigations of the cortically defined fMRI adaptation effect and of the behaviorally defined repetition priming effect have provided useful insights into how visual information is perceived and stored in the brain. Yet, although both phenomena are typically associated with reduced activation in visually responsive brain regions as a result of stimulus repetition, it is presently unknown whether they rely on common or dissociable neural mechanisms. In an event-related fMRI experiment, we manipulated fMRI adaptation and repetition priming orthogonally. Subjects made comparative size judgments for pairs of stimuli that depicted either the same or different objects; some of the pairs presented during scanning had been shown previously and others were new. This design allowed us to examine whether object-selective regions in occipital and temporal cortex were sensitive to adaptation, priming, or both. Critically, it also allowed us to test whether any region showing sensitivity to both manipulations displayed interactive or additive effects. Only a partial overlap was found between areas that were sensitive to fMRI adaptation and those sensitive to repetition priming. Moreover, in most of the object-selective regions that showed both effects, the reduced activation associated with the two phenomena were additive rather than interactive. Together, these findings suggest that fMRI adaptation and repetition priming can be dissociated from one another in terms of their neural mechanisms.},
	number = {3},
	urldate = {2014-04-18},
	journal = {NeuroImage},
	author = {Ganel, Tzvi and Gonzalez, Claudia L. R. and Valyear, Kenneth F. and Culham, Jody C. and Goodale, Melvyn A. and Köhler, Stefan},
	month = sep,
	year = {2006},
	keywords = {Fusiform gyrus, Implicit memory, Lateral occipital area, Object recognition, Visual processing, Visual systems},
	pages = {1432--1440}
}

@article{allenmark_conjunctions_2012,
	title = {Conjunctions between {Motion} and {Disparity} {Are} {Encoded} with the {Same} {Spatial} {Resolution} {As} {Disparity} {Alone}},
