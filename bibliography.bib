	author = {Spaak, Eelke and Fonken, Yvonne and Jensen, Ole and Lange, Floris P. de},
	month = sep,
	year = {2015},
	pmid = {26400919},
	keywords = {MEG, Perception, Visual search, expectation, rapid resumption},
	pages = {bhv210}
}

@article{geyer_expectancies_2008,
