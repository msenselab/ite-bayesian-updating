@article{moutsopoulou_across-task_2012,
	title = {Across-task priming revisited: {Response} and task conflicts disentangled using ex-{Gaussian} distribution analysis},
	volume = {38},
	copyright = {(c) 2012 APA, all rights reserved},
	issn = {1939-1277(Electronic);0096-1523(Print)},
	shorttitle = {Across-task priming revisited},
	doi = {10.1037/a0025858},
	abstract = {The differential effects of task and response conflict in priming paradigms where associations are strengthened between a stimulus, a task, and a response have been demonstrated in recent years with neuroimaging methods. However, such effects are not easily disentangled with only measurements of behavior, such as reaction times (RTs). Here, we report the application of ex-Gaussian distribution analysis on task-switching RT data and show that conflict related to stimulus–response associations retrieved after a switch of tasks is reflected in the Gaussian component. By contrast, conflict related to the retrieval of stimulus–task associations is reflected in the exponential component. Our data confirm that the retrieval of stimulus–task and –response associations affects behavior differently. Ex-Gaussian distribution analysis is a useful tool for pulling apart these different levels of associative priming that are not distinguishable in analyses of RT means.},
